<section class="features">
    <div class="container">
      <div class="">
        {% for i in (1..5) %}
          {% assign image_var = 'feature_image_' | append: i %}
          {% assign title_var = 'feature_title_' | append: i %}
          {% assign text_var = 'feature_text_' | append: i %}
          {% assign image = section.settings[image_var] %}
          {% assign title = section.settings[title_var] %}
          {% assign text = section.settings[text_var] %}
          {% assign shape = section.settings.image_shape %}
  
          <div class="col-md-2 feature-item border border-danger">
            <div class="feature ">
              {% if image %}
                <div class="  image-wrapper {% if shape == 'circle' %}circle{% elsif shape == 'parallelogram' %}parallelogram{% endif %}">
                  <img src="{{ image | image_url: '200x200' }}" width="200" height="200" alt="{{ title }}">
                </div>
              {% endif %}
              <h3 style="font-size: {{ section.settings.font_size }}px;">{{ title }}</h3>
              {% if text != blank %}
                <p style="font-size: {{ section.settings.font_size | minus: 2 }}px;">{{ text }}</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
  
  <style>
  .features {
    text-align: center;
    padding: 5px 0;
  }
  
  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .image-wrapper {
    background-color: #1A3C61;
    padding: px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%; /* default shape is circle */
  }
  
  .image-wrapper img {
    display: block;
    max-width: 100%;
    height: auto;
  }
  
  .feature h3 {
    margin-top: 20px;
    font-weight: bold;
  }
  
  .feature p {
    color: #666;
    margin-top: 10px;
  }
  
  .icon.circle { border-radius: 50%; } /* Style for circle shape */
  .icon.parallelogram { transform: skewX(-20deg); } /* Style for parallelogram shape */
  </style>
  
